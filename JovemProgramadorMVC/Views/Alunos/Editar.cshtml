
@model AlunoModel

<form asp-controller="Alunos" asp-action="Atualizar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="text-sm-left">
        <h1>
            Editando dados do aluno
        </h1>
        <hr class="border border-info border-3 opacity-100">
    </div>

    <div class="text-sm-left">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control col-md-6" id="nome" placeholder="Seu nome">
        </div>

        <div class="mb-3">
            <label for="idade" class="form-label">Idade</label>
            <input type="number" asp-for="Idade" class="form-control col-1" id="idade" placeholder="Idade">
        </div>

        <div class="mb-3">
            <label for="contato" class="form-label">Contato</label>
            <input type="text" asp-for="Contato" class="form-control col-2" id="contato" placeholder="(DDD) 0000-0000">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" asp-for="Email" class="form-control col-3" id="email" placeholder="exemplo@gmail.com">
        </div>

        <div class="mb-3">
            <label for="cep" class="form-label">CEP</label>
            <input type="text" asp-for="Cep" class="form-control col-2" id="cep" placeholder="00000-000">
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a style="margin:10px" class="btn btn-secondary" asp-controller="Alunos" asp-action="Index">Voltar</a>
    </div>
</form> 