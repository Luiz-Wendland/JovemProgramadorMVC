@{
    ViewData["Title"] = "Alunos";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success col-10">
        @TempData["MensagemSucesso"]
    </div>
    TempData["EditarSucesso"] = null;

}

else if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger col-10">
        @TempData["MensagemErro"]
    </div>
    TempData["EditarSucesso"] = null;
}


@if (TempData["EditarSucesso"] != null)
{
    <div class="alert-success">
        @TempData["EditarSucesso"]
    </div>
    TempData["EditarSucesso"] = null;
}

@if (TempData["EditarErro"] != null)
{
    <div class="alert-danger">
        @TempData["EditarErro"]
    </div>
    TempData["EditarSucesso"] = null;

}

@model List<AlunoModel>

<div class="text-left">
    <div>
        <h1>Dados do aluno</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">E-mail</th>
                <th scope="col">CEP</th>
                <th scope="col">Endereço</th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model){
                    <tr>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Idade</td>
                        <td>@aluno.Contato</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a style="margin:5px" class="btn btn-secondary" type="submit" asp-controller="Alunos" asp-action="BuscarEndereco" asp-route-cep="@aluno.Cep">Endereço</a>
                            </div>
                        </td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a style="margin:5px" class="btn btn-primary" type="submit" asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                            </div>
                        </td>
                        <td>
                            <div class="d-grid gap-2 d-md-block">
                                <a style="margin:5px" class="btn btn-danger" type="button" asp-controller="Alunos" asp-action="RemoverAluno" asp-route-id="@aluno.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <a asp-controller="Alunos" asp-action="Adicionar" class="btn btn-primary">Adicionar novo aluno</a>
    </div>

</div>