@{
    ViewData["Title"] = "Alunos";
}

<div class="text-left">
    <div>
        <h1>Dados do aluno</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">E-mail</th>
                <th scope="col">CEP</th>
                <th scope="col">Endereço</th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model){
                    <tr>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Idade</td>
                        <td>@aluno.Contato</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Cep</td>
                        <td><button type="button" class="btn btn-primary">Endereço</button></td>
                        <td><button type="button" class="btn btn-danger">Excluir</button></td>
                        <td><a type="submit" class="btn btn-primary" role="button" asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a></td>
                    </tr>
                }
            }
